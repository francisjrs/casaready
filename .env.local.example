# CasaReady Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME="CasaReady"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Database Configuration
DATABASE_URL="your_database_connection_string_here"

# Authentication
AUTH_SECRET="your_auth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Google/Gemini AI API Configuration
GOOGLE_API_KEY="your_google_gemini_api_key_here"

# Gemini Model Configuration (plug-and-play different models)
GEMINI_MODEL_FINANCIAL="gemini-2.5-pro"           # Complex DTI calculations, use Pro
GEMINI_MODEL_LOAN_OPTIONS="gemini-2.5-flash"     # Program comparison, Flash is faster
GEMINI_MODEL_LOCATION="gemini-2.5-flash"         # Market data lookup, Flash is faster

# Alternative models (uncomment to test):
# GEMINI_MODEL_FINANCIAL="gemini-2.5-flash"      # Faster but less accurate for math
# GEMINI_MODEL_LOAN_OPTIONS="gemini-2.5-flash-lite"  # Lowest cost/latency
# GEMINI_MODEL_LOCATION="gemini-2.5-flash-lite"      # Lowest cost/latency

# Gemini Advanced Configuration
GEMINI_THINKING_BUDGET="0"                        # 0=disabled for speed, 1024=deep reasoning
GEMINI_ENABLE_GROUNDING_FINANCIAL="false"         # Search grounding for financial section
GEMINI_ENABLE_GROUNDING_LOANS="false"             # Search grounding for loan section
GEMINI_ENABLE_GROUNDING_LOCATION="true"           # Search grounding for location (real-time market data)
GEMINI_MAX_OUTPUT_TOKENS_FINANCIAL="2000"         # Increased from 800
GEMINI_MAX_OUTPUT_TOKENS_LOANS="2500"             # Increased from 1000
GEMINI_MAX_OUTPUT_TOKENS_LOCATION="3000"          # Increased from 1200
GEMINI_TEMPERATURE="0.3"                          # 0-1, lower = more deterministic
GEMINI_ENABLE_PARALLEL_GENERATION="true"          # Enable concurrent section generation (60% faster)

# External APIs
WEATHER_API_KEY="your_weather_api_key_here"
MAPS_API_KEY="your_google_maps_api_key_here"

# Email Configuration
SMTP_HOST="your_smtp_host_here"
SMTP_PORT="587"
SMTP_USER="your_smtp_username_here"
SMTP_PASS="your_smtp_password_here"
EMAIL_FROM="noreply@casaready.com"

# File Storage
STORAGE_PROVIDER="local" # Options: local, s3, cloudinary
AWS_ACCESS_KEY_ID="your_aws_access_key_here"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key_here"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your_s3_bucket_name_here"

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name_here"
CLOUDINARY_API_KEY="your_cloudinary_api_key_here"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret_here"

# Analytics
GOOGLE_ANALYTICS_ID="your_google_analytics_id_here"

# Feature Flags
FEATURE_AI_ASSISTANT="true"
FEATURE_SMART_HOME_INTEGRATION="false"
FEATURE_MAINTENANCE_TRACKING="true"
FEATURE_ENERGY_MONITORING="false"

# Logging
LOG_LEVEL="info" # Options: error, warn, info, debug
SENTRY_DSN="your_sentry_dsn_here"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Cache Configuration
REDIS_URL="your_redis_connection_string_here"

# Webhooks
WEBHOOK_SECRET="your_webhook_secret_here"

# Development Only
SKIP_ENV_VALIDATION="false"