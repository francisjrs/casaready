# CasaReady Environment Variables
# Copy this file to .env.local and fill in the actual values

# =============================================================================
# API KEYS (PRIVATE - Server-side only)
# =============================================================================

# Google Gemini AI API Key
# Get from: https://aistudio.google.com/app/apikey
# Used for: AI-powered home buying plan generation
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# WEBHOOKS & INTEGRATIONS (PRIVATE - Server-side only)
# =============================================================================

# Zapier Webhook URL for KW Command integration
# Get from: Your Zapier dashboard
# Used for: Lead capture and CRM integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id/

# =============================================================================
# ANALYTICS & TRACKING (PUBLIC - Client-side accessible)
# =============================================================================

# Google Analytics Measurement ID
# Get from: Google Analytics dashboard
# Used for: Website analytics and conversion tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# SITE CONFIGURATION (PUBLIC - Client-side accessible)
# =============================================================================

# Site URL for canonical links and redirects
# Production: https://your-domain.vercel.app
# Development: http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# REALTOR CONTACT INFORMATION (PUBLIC - Client-side accessible)
# =============================================================================

# Realtor name for branding and contact
NEXT_PUBLIC_REALTOR_NAME="Sully Ruiz"

# Business address
NEXT_PUBLIC_REALTOR_ADDRESS="9606 N Mopac Expy #950, Austin, TX 78759"

# Primary phone number
NEXT_PUBLIC_REALTOR_PHONE="(512) 412-2352"

# WhatsApp number (if different from phone)
NEXT_PUBLIC_REALTOR_WHATSAPP="(512) 412-2352"

# Business email
NEXT_PUBLIC_REALTOR_EMAIL="realtor@sullyruiz.com"

# Social media links
NEXT_PUBLIC_REALTOR_FACEBOOK="https://www.facebook.com/sullyruizrealtor"
NEXT_PUBLIC_REALTOR_INSTAGRAM="https://www.instagram.com/sullyruizrealtor/"

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Environment (auto-detected if not set)
# NODE_ENV=development

# Log level for debugging
# LOG_LEVEL=info

# Rate limiting (requests per minute)
# RATE_LIMIT_RPM=60

# =============================================================================
# VERCEL DEPLOYMENT NOTES
# =============================================================================
#
# 1. Never commit .env.local to git (already in .gitignore)
# 2. Set environment variables in Vercel dashboard:
#    - Project Settings > Environment Variables
# 3. Separate values for Preview and Production environments
# 4. NEXT_PUBLIC_ variables are exposed to the client
# 5. Private variables are only available server-side
#
# =============================================================================